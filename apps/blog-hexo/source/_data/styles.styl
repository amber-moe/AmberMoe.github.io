// Custom styles for NexT theme - VTuber Pink Theme

// Primary color - VTuber Pink
$vtuber-pink = #ff9ead
$vtuber-pink-light = #ffb7c5
$vtuber-pink-dark = #ff8599

// Override theme colors
$theme-color = $vtuber-pink

// Link colors
a
  color: $vtuber-pink-dark
  &:hover
    color: $vtuber-pink

// Header style
.header
  background: linear-gradient(135deg, $vtuber-pink-light 0%, $vtuber-pink 100%)

// Sidebar avatar border
.site-author-image
  border: 3px solid $vtuber-pink-light !important

// Post title hover
.post-title-link:hover
  color: $vtuber-pink !important
  border-bottom-color: $vtuber-pink !important

// Button styles
.btn
  background: $vtuber-pink
  border-color: $vtuber-pink
  &:hover
    background: $vtuber-pink-dark
    border-color: $vtuber-pink-dark

// Back to top button
.back-to-top
  background: $vtuber-pink
  &:hover
    background: $vtuber-pink-dark

// Reading progress bar
.reading-progress-bar
  background: $vtuber-pink !important

// Menu item active
.menu-item-active a
  color: $vtuber-pink !important
  border-bottom-color: $vtuber-pink !important
